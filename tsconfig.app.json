{

    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./dist/app",       // Output directory for compiled files
      "rootDir": "./src"            // Root directory for source files
    },
    "include": ["src/**/*.ts"],      // Include all TypeScript files in the 'src' folder
    "exclude": ["node_modules"]      // Exclude the 'node_modules' folder from compilation
  }
  